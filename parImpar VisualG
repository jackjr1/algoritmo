algoritmo "ParImpar"

var

   n:inteiro

inicio

      escreval("Digite um número: ")
      leia(n)
      escreval
              se (n MOD 2 = 0) entao
                 escreval("O número", n, " é par!")
                 escreval
              senao
                 escreval("O número", n, " é impar!")
                 escreval
              fimse

fimalgoritmo
